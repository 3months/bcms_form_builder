<div class="field_container">
  <% element.load_element -%>
    <div class="fieldLabel">
        <label for="fieldLabel"><%=h element.label %></label>
    </div>
    <div class="fieldContent">
      <% element.options.each do |option| -%>
        <span class="pair">
          <%= radio_button_tag("custom_form[#{element.html_attribute_name}]", string_to_html_name(option[:value]).to_s, option[:selected], :disabled => !!element.disabled, :class => element.classes) %>
          <label for="custom_form_<%= element.html_attribute_name %>_<%= string_to_html_name(option[:value]) %>"><%=h option[:label] %></label>
        </span>
      <% end -%>
    </div>
</div>