  <div class="fields text_fields">
    <label><%=h method.to_s.capitalize %></label>
    <div style="margin-left: 140px">
      <table id="options_list">
        <thead>
          <tr>
            <th class="delete"></th>
            <th class="label">Label</th>
            <th class="value" colspan="2">Value</th>
          </tr>
        </thead>
        <tbody>
          <% @form_element.send(method).to_a.each do |option| -%>
            <%= render(:partial => "cms/custom_form_elements/forms/#{options[:element_type]}_#{method}", :locals => {:option => option, :template => false}) %>
          <% end -%>
          <%= render(:partial => "cms/custom_form_elements/forms/#{options[:element_type]}_#{method}", :locals => {:option => {}, :template => true}) %>
        </tbody>
      </table>
      <%= link_to('add option', '#', :onclick => 'newFormOption(); return false;', :class => 'new_option') %>
    </div>
  </div>
