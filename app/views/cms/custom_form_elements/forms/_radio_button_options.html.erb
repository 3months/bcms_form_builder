          <% content_tag(:li, :class => 'option', :style => template ? 'display: none;': nil, :id => template ? 'option_template' : nil) do %>
            <span class="column"><%= link_to('delete', '#', :onclick => 'deleteFormOption($(this)); return false;') %></span>
            <span class="column"><%= text_field_tag('radio_button_custom_form_element[options][][label]', option[:label], :style => 'width: 100px;') %></span>
            <span class="column"><%= text_field_tag('radio_button_custom_form_element[options][][value]', option[:value], :style => 'width: 80px;') %></span>
            <span class="column"><%= check_box_tag('radio_button_custom_form_element[options][][selected]', '1', option[:selected], :style => 'width: 80px;') %>&nbsp;selected?</span>
          <% end %>