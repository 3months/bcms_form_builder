<%= content_for :html_head, stylesheet_link_tag('cms/form_layout') %>

<% content_for :functions do %>

  <%= link_to span_tag("Add new element"), edit_cms_custom_form_path(:id => @block.id, :anchor => 'new_element'),
    :id => "add_button",
    :class => "spacer button#{ ' off' if action_name == 'new'}" %>

  <%= link_to span_tag("Edit custom form"), edit_cms_custom_form_path(:id => @block.id),
    :id => "edit_form_button",
    :class => "button" %>

  <%= link_to span_tag("Edit element"), "#",
    :id => "edit_button",
    :class => "button disabled#{ ' off' if action_name == 'edit'}" %>

  <%= link_to span_tag("<span class=\"delete_img\">&nbsp;</span>Delete"), "#",
    :id => "delete_button",
    :class => "spacer button disabled http_delete confirm_with_title",
    :title => "Are you sure you want to delete this record?" %>
<% end %>